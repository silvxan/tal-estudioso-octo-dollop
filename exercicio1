#include <stdio.h>
#include <stdlib.h>

int main(){

int i, j, n;
    
    printf("Digite o valor de n: ");
    scanf("%d", &n);
    
    for(int i = 1; i < n; i++){
        for(int j = 7 - i; j >= 1; j--)
        printf(" ");
        for(int j = 1; j <= i; j++)
        printf("*");
        printf("\n");
    }
    
    return 0;
}
